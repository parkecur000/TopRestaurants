@{
    ViewBag.Title = "Restaurant Suggestion Submission";
}
@model TopRestaurants.Models.Submissions
    <div class="text-center">
        <form asp-action="Submissions" method="post">
            <div class="form-group row">
                <label asp-for="name" class="col-sm-2 col-form-label">Your Name</label>
                <div class="col-sm-10">
                    <input asp-for="name" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="restaurant_name" class="col-sm-2 col-form-label">Restaurant Name</label>
                <div class="col-sm-10">
                    <input asp-for="restaurant_name" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="favorite_dish" class="col-sm-2 col-form-label">Favorite Dish</label>
                <div class="col-sm-10">
                    <input asp-for="favorite_dish" class="form-control"/>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="phone" class="col-sm-2 col-form-label">Restaurant Phone Number</label>
                <div class="col-sm-10">
                    <input asp-for="phone" class="form-control"/>
                </div>
            </div>
            <br />
            <div class="text-center">
                <input type="submit" value="Submit" />
            </div>
        </form>

        <div asp-validation-summary="All"></div>
    </div>